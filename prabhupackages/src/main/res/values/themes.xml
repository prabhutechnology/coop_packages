    <style name="InputFieldLayoutdate" parent="Widget.AppCompat.EditText">
        <item name="boxStrokeWidth">0dp</item>
        <item name="boxStrokeWidthFocused">0dp</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="android:colorControlActivated">@color/colorGray</item>
        <item name="hintTextAppearance">@style/HintTextProps</item>
        <item name="errorTextAppearance">@style/InputFieldError</item>
        <item name="background">@null</item>
        <item name="android:textColorHint">@color/colorGray</item>
        <item name="android:textColor">@color/colorBlack</item>
    </style>

    <style name="Theme.PrabhuCoop.WhiteAccent">
        <item name="colorAccent">@color/white</item>
    </style>

    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="bottomSheetStyle">@style/bottomSheetStyleWrapper</item>
    </style>

    <style name="bottomSheetStyleWrapper" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="HintTextProps">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BlackLinkText" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="NameTitleBottomSheet" parent="TextAppearance.AppCompat">
        <item name="android:textColor">#000000</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="TextAppearance.AppCompat.TextInputColor" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="InputFieldError" parent="@android:style/TextAppearance">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.UI.Button" parent="Theme.PrabhuCoop">
        <item name="android:textColor">@color/white</item>
        <item name="android:background">@drawable/btn_shape</item>
    </style>

    <style name="AppTheme.UI.FullDialog" parent="Theme.PrabhuCoop">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
    </style>
